{
	"manifest_version": 3,
	"name": "Stock Helper",
	"version": "1.3.0",
	"description": "股票信息，价格提示",
	"icons": {
		"16": "images/stocks16.png",
		"32": "images/stocks32.png",
		"48": "images/stocks48.png",
		"64": "images/stocks64.png",
		"128": "images/stocks128.png"
	},
	"action": {
		"default_icon": {
			"24": "images/stocks24.png",
			"48": "images/stocks48.png"
		},
		"default_title": "Stock Helper",
		"default_popup": "index.htm"
	},
	"background": {
		"service_worker": "js/background.js"
	},
	"host_permissions": [
		"*://hq.sinajs.cn/?list=*",
		"*://www.sse.com.cn/js/common/*",
		"*://www.ctxalgo.com/api/*",
		"*://www.cninfo.com.cn/new/data/*"
	],
	"permissions": [
		"storage",
		"notifications",
		"declarativeNetRequestWithHostAccess",
		"declarativeNetRequest"
	]
}